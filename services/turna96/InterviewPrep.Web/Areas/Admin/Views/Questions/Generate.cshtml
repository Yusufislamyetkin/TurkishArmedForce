@model InterviewPrep.Web.Services.Questions.Models.AiQuestionGenerationRequest
@{
    ViewData["Title"] = "AI ile Soru Üret";
    var availableTypes = ViewBag.AvailableTypes as InterviewPrep.Web.Models.Questions.QuestionType[] ?? Array.Empty<InterviewPrep.Web.Models.Questions.QuestionType>();
}

<h2 class="fw-bold mb-3">AI ile yeni sorular üret</h2>
<p class="text-muted">Seviye, kategori ve soru tiplerini seçerek OpenAI Assistants API ile yeni sorular oluştur.</p>

<form asp-action="Generate" method="post" class="card bg-black border-secondary shadow-sm">
    <div class="card-body">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        <div class="row g-3">
            <div class="col-md-4">
                <label asp-for="Level" class="form-label">Seviye</label>
                <select asp-for="Level" class="form-select bg-dark text-light border-secondary">
                    <option value="Junior" @(Model.Level == "Junior" ? "selected" : string.Empty)>Junior</option>
                    <option value="Orta Seviye" @(Model.Level == "Orta Seviye" ? "selected" : string.Empty)>Orta Seviye</option>
                    <option value="Senior" @(Model.Level == "Senior" ? "selected" : string.Empty)>Senior</option>
                </select>
                <span asp-validation-for="Level" class="text-danger small"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Category" class="form-label">Kategori</label>
                <input asp-for="Category" class="form-control bg-dark text-light border-secondary" placeholder="Örn: .NET, SQL" />
                <span asp-validation-for="Category" class="text-danger small"></span>
            </div>
            <div class="col-md-4">
                <label asp-for="Count" class="form-label">Soru Adedi</label>
                <input asp-for="Count" type="number" min="1" max="10" class="form-control bg-dark text-light border-secondary" />
                <span asp-validation-for="Count" class="text-danger small"></span>
            </div>
        </div>
        <hr class="border-secondary my-4" />
        <div class="row g-3">
            <div class="col-12">
                <label class="form-label">Soru Tipleri</label>
                <div class="row g-2">
                    @foreach (var type in availableTypes)
                    {
                        <div class="col-md-3 col-sm-6">
                            <div class="form-check form-switch border border-secondary rounded p-3">
                                <input class="form-check-input" type="checkbox" name="Types" value="@type" id="type-@type" @(Model.Types.Contains(type) ? "checked" : string.Empty) />
                                <label class="form-check-label" for="type-@type">@type</label>
                            </div>
                        </div>
                    }
                </div>
                <span asp-validation-for="Types" class="text-danger small"></span>
            </div>
        </div>
    </div>
    <div class="card-footer border-secondary d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-outline-light">Geri dön</a>
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-magic"></i> Ön izleme oluştur
        </button>
    </div>
</form>
